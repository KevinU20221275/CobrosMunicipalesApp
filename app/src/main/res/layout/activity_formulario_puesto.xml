<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Top App Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/topbar_height"
        android:background="@color/primary"
        app:title="Registrar Puesto"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:background="@color/background_light"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="16dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TÍTULO -->
            <TextView
                android:id="@+id/tituloPantalla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrar Puesto"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:textColor="#333333"/>

            <TextView
                android:text="Número de Puesto"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/inputNumeroPuesto"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/input_bg"
                android:padding="14dp"
                android:textColor="#333333"
                android:textSize="16sp"
                android:inputType="number"
                android:hint="F0901" />

            <TextView
                android:text="Tarifa (Monto)"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:textColor="#333333"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/inputTarifa"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/input_bg"
                android:padding="14dp"
                android:textColor="#333333"
                android:textSize="16sp"
                android:inputType="numberDecimal"
                android:hint="Ej: 1.50" />

            <Button
                android:id="@+id/btnGuardarPuesto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:padding="10dp"
                android:layout_marginTop="25dp"/>

        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>