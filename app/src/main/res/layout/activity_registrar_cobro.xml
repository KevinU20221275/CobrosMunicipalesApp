<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7F8">

    <!-- Contenido principal scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="90dp"
            android:dividerPadding="16dp">

            <!-- TÍTULO -->
            <TextView
                android:id="@+id/tituloPantalla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrar Cobro"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:textColor="#333333"/>

            <!-- SECCIÓN DATOS DEL COMERCIANTE -->
            <TextView
                android:text="DATOS DEL COMERCIANTE"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#6B7280"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Nombre -->
            <TextView
                android:text="Nombre del comerciante"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/inputNombre"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/input_bg"
                android:padding="14dp"
                android:textColor="#333333"
                android:textSize="16sp"
                android:hint="Ingresa el nombre completo"/>

            <!-- Número de puesto -->
            <TextView
                android:text="Número de puesto"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/inputPuesto"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:inputType="number"
                android:background="@drawable/input_bg"
                android:padding="14dp"
                android:textColor="#333333"
                android:textSize="16sp"
                android:hint="Ingresa el número de puesto"/>

            <!-- SECCIÓN DETALLES DEL COBRO -->
            <TextView
                android:text="DETALLES DEL COBRO"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#6B7280"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Monto cobrado + Dinero recibido -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monto cobrado:"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/inputMonto"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:inputType="numberDecimal"
                        android:background="@drawable/input_bg"
                        android:padding="14dp"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:hint="$0.00"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dinero recibido:"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/inputRecibido"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:inputType="numberDecimal"
                        android:background="@drawable/input_bg"
                        android:padding="14dp"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:hint="$0.00"/>
                </LinearLayout>

            </LinearLayout>


            <!-- Vuelto -->
            <TextView
                android:text="Vuelto entregado"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/inputVuelto"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/input_disabled"
                android:padding="14dp"
                android:textColor="#666666"
                android:textSize="16sp"
                android:enabled="false"
                android:focusable="false"
                android:clickable="false"
                android:hint="$0.00"/>

            <!-- SECCIÓN INFORMACIÓN ADICIONAL -->
            <TextView
                android:text="INFORMACIÓN ADICIONAL"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#6B7280"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Fecha -->
            <TextView
                android:text="Fecha del cobro"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/input_bg"
                android:gravity="center_vertical"
                android:padding="14dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputFecha"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="dd/mm/yyyy"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="false"/>

                <ImageView
                    android:id="@+id/imgCalendar"
                    android:src="@drawable/ic_calendar"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:tint="#6B7280"
                    android:padding="4dp"/>
            </LinearLayout>

            <!-- Ubicación -->
            <TextView
                android:text="Ubicación GPS"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:background="@drawable/input_bg"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:src="@drawable/ic_location"
                    android:tint="#2B8CEE"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtLatitud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Latitud: "
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/txtLongitud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Longitud: "
                        android:textSize="14sp"
                        android:textColor="#333333" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- BOTÓN INFERIOR -->
    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Guardar"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#2B8CEE"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:gravity="center"/>
</FrameLayout>
